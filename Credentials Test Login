    @Test
    public void validLoginCredentials_showDashboardActivity() {
        /*
        * ddovbd
        * */

        //initializing the new test user
        testUser = new User();

        //Basic user auth and mocking the user login details according to the abc
        Mockito.when(component.getMockDataManager().getLoginUserDetail("Basic YWJjOmFiYw==",
                true)).thenReturn(Observable.just(testUser));

        new RuntimeException()

        //launching the login activity
        mLoginActivityActivityTestRule.launchActivity(null);

        //Input abc inside the email text field
        onView(withId(R.id.etEmail)).perform(ViewActions.clearText(),
                typeText("abc"));

        //Input abc inside the password text field
        onView(withId(R.id.etPassword)).perform(ViewActions.clearText(),
                typeText("abc"));

        //Closing th soft keyboard
        onView(withId(R.id.etPassword)).perform(
                closeSoftKeyboard());

        // performing click on the login button
        onView(withId(R.id.bLogin)).perform(click());

        //Verifying if the dashboard activity is open
        Intents.intended(IntentMatchers.hasComponent(DashboardActivity.class.getName()));

    }
    
    
    
